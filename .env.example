# AscendoreCRM Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/ascendore_crm
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ascendore_crm
DB_USER=postgres
DB_PASSWORD=your_password_here

# Overlord Platform Integration
OVERLORD_DATABASE_URL=postgresql://user:password@localhost:5432/overlord
OVERLORD_API_URL=http://localhost:3000

# JWT Configuration (from Overlord)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# AI Services (Anthropic Claude)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Optional: AWS Services (if needed for other features)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_REALTIME=true
